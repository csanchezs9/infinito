{
  "name": "infinito-piercing-catalog",
  "version": "3.0.0",
  "description": "Sistema de Catálogos Profesional - Infinito Piercing",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "electron . --inspect",
    "build": "electron-builder --win --x64",
    "build-portable": "electron-builder --win portable"
  },
  "keywords": [
    "pdf",
    "catalog",
    "piercing",
    "shopify",
    "api"
  ],
  "author": "Infinito Piercing",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "puppeteer": "^21.5.0"
  },
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.infinitopiercing.catalogo",
    "productName": "Infinito Piercing - Catálogos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Infinito Catálogos"
    }
  }
}
